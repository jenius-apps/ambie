<Page
    x:Class="AmbientSounds.Views.ChannelsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:AmbientSounds.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="using:JeniusApps.Common.UI.Uwp"
    xmlns:local="using:AmbientSounds.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
    xmlns:strings="using:AmbientSounds.Strings"
    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
    xmlns:vm="using:AmbientSounds.ViewModels"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <GridView ItemsSource="{x:Bind ViewModel.Channels}" SelectedItem="{x:Bind ViewModel.SelectedSound, Mode=TwoWay}">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="vm:ChannelViewModel">
                    <StackPanel Padding="12">
                        <Border
                            Width="200"
                            Height="120"
                            CornerRadius="8">
                            <Border.Background>
                                <ImageBrush ImageSource="{x:Bind ImagePath, Mode=OneWay}" Stretch="UniformToFill" />
                            </Border.Background>
                        </Border>

                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="12"
                            Text="{x:Bind Name, Mode=OneWay}"
                            TextAlignment="Center"
                            TextWrapping="WrapWholeWords" />
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Rectangle
                Grid.RowSpan="3"
                Width="0.5"
                Margin="0,20"
                HorizontalAlignment="Left"
                Style="{StaticResource ModuleVerticalDividerRectStyle}" />

            <Border
                Height="160"
                Margin="20"
                HorizontalAlignment="Stretch"
                CornerRadius="8"
                Visibility="{x:Bind extensions:UIExtensions.CollapsedIfNull(ViewModel.SelectedSound), Mode=OneWay}">
                <Border.Background>
                    <ImageBrush ImageSource="{x:Bind ViewModel.SelectedSound.ImagePath, Mode=OneWay}" Stretch="UniformToFill" />
                </Border.Background>

                <ui:Effects.Shadow>
                    <media:AttachedCardShadow
                        BlurRadius="12"
                        CornerRadius="8"
                        Opacity="0.3"
                        Offset="0,2" />
                </ui:Effects.Shadow>
            </Border>

            <StackPanel
                Grid.Row="1"
                Margin="20,0"
                Visibility="{x:Bind extensions:UIExtensions.CollapsedIfNull(ViewModel.SelectedSound), Mode=OneWay}">
                <TextBlock
                    FontSize="12"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="{x:Bind ViewModel.SelectedSound.Description, Mode=OneWay}" />

                <controls:TimerData
                    Title="{x:Bind strings:Resources.SlideshowImagesText}"
                    Grid.Row="1"
                    Glyph="{StaticResource GlyphPhoto}"
                    Text="{x:Bind strings:Resources.IncludedText}"
                    Visibility="{x:Bind ViewModel.SelectedSound.HasSlideshowImages}" />

                <controls:TimerData
                    Title="{x:Bind strings:Resources.VideoBackgroundText}"
                    Grid.Row="2"
                    Glyph="{StaticResource GlyphFilmstrip}"
                    Text="{x:Bind strings:Resources.AvailableText}"
                    Visibility="{x:Bind ViewModel.SelectedSound.HasBackgroundVideo}" />

                <Button
                    MinHeight="48"
                    HorizontalAlignment="Stretch"
                    Content="Download"
                    Style="{StaticResource AccentButtonStyle}" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
