<UserControl
    x:Class="AmbientSounds.Controls.PlayerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AmbientSounds.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button
                Width="60"
                Height="60"
                AutomationProperties.Name="{x:Bind ViewModel.IsPaused, Mode=OneWay, Converter={StaticResource PlayButtonAutomationNameConverter}}"
                Command="{x:Bind ViewModel.TogglePlayStateCommand}"
                CornerRadius="30"
                ToolTipService.ToolTip="{x:Bind ViewModel.IsPaused, Mode=OneWay, Converter={StaticResource PlayButtonAutomationNameConverter}}">
                <Grid>
                    <!--  play  -->
                    <FontIcon
                        FontFamily="Segoe MDL2 Assets"
                        Glyph="&#xF5B0;"
                        Visibility="{x:Bind ViewModel.IsPaused, Mode=OneWay}" />

                    <!--  pause  -->
                    <FontIcon
                        FontFamily="Segoe MDL2 Assets"
                        Glyph="&#xE103;"
                        Visibility="{x:Bind ViewModel.IsPlaying, Mode=OneWay}" />
                </Grid>
            </Button>
            <StackPanel
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Background="Transparent">
                <TextBlock Margin="0,8,0,0" Text="{x:Bind ViewModel.SoundName, Mode=OneWay, Converter={StaticResource SoundNameConverter}}" />
                <Slider
                    Width="120"
                    Margin="0,4,0,0"
                    Value="{x:Bind ViewModel.Volume, Mode=TwoWay}" />
            </StackPanel>
            <local:SleepTimerControl Margin="20,0,0,0" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
