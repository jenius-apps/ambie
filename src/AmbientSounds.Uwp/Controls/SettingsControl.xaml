<UserControl
    x:Class="AmbientSounds.Controls.SettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    xmlns:local="using:AmbientSounds.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:strings="using:AmbientSounds.Strings"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <ScrollViewer Margin="0">
        <StackPanel Margin="0,0,16,0" Spacing="4">
            <StackPanel.ChildrenTransitions>
                <EntranceThemeTransition FromVerticalOffset="50" IsStaggeringEnabled="True" />
            </StackPanel.ChildrenTransitions>

            <!--  Telemetry  -->
            <labs:SettingsCard x:Uid="SettingsTelemetrySwitch" Description="This controls if crashes and usage info are reported to help improve Ambie.">
                <labs:SettingsCard.HeaderIcon>
                    <FontIcon FontFamily="{StaticResource FluentUIGlyphs}" Glyph="{StaticResource GlyphDiagnostics}" />
                </labs:SettingsCard.HeaderIcon>

                <ToggleSwitch IsOn="{x:Bind ViewModel.TelemetryEnabled, Mode=TwoWay}">
                    <ToggleSwitch.OffContent>
                        <TextBlock x:Uid="OffTextBlock" />
                    </ToggleSwitch.OffContent>
                    <ToggleSwitch.OnContent>
                        <TextBlock x:Uid="OnTextBlock" />
                    </ToggleSwitch.OnContent>
                </ToggleSwitch>
            </labs:SettingsCard>

            <!--  New sound notifications  -->
            <labs:SettingsCard x:Uid="SettingsNotificationsSwitch" Description="We let you know when new sounds are available for download.">
                <labs:SettingsCard.HeaderIcon>
                    <FontIcon FontFamily="{StaticResource FluentUIGlyphs}" Glyph="{StaticResource GlyphNotification}" />
                </labs:SettingsCard.HeaderIcon>

                <ToggleSwitch IsOn="{x:Bind ViewModel.NotificationsEnabled, Mode=TwoWay}">
                    <ToggleSwitch.OffContent>
                        <TextBlock x:Uid="OffTextBlock" />
                    </ToggleSwitch.OffContent>
                    <ToggleSwitch.OnContent>
                        <TextBlock x:Uid="OnTextBlock" />
                    </ToggleSwitch.OnContent>
                </ToggleSwitch>
            </labs:SettingsCard>

            <!--  Resume on launch  -->
            <labs:SettingsCard Description="On launch, Ambie will resume playing automatically." Header="{x:Bind strings:Resources.SettingsResumeOnLaunch}">
                <labs:SettingsCard.HeaderIcon>
                    <FontIcon FontFamily="{StaticResource FluentUIGlyphs}" Glyph="{StaticResource GlyphPlay}" />
                </labs:SettingsCard.HeaderIcon>

                <ToggleSwitch IsOn="{x:Bind ViewModel.ResumeOnLaunchEnabled, Mode=TwoWay}">
                    <ToggleSwitch.OffContent>
                        <TextBlock x:Uid="OffTextBlock" />
                    </ToggleSwitch.OffContent>
                    <ToggleSwitch.OnContent>
                        <TextBlock x:Uid="OnTextBlock" />
                    </ToggleSwitch.OnContent>
                </ToggleSwitch>
            </labs:SettingsCard>

            <!--  Ambie Mini on focus  -->
            <labs:SettingsCard Description="Ambie Mini will open automatically when focusing." Header="{x:Bind strings:Resources.SettingsCompactMode}">
                <labs:SettingsCard.HeaderIcon>
                    <FontIcon FontFamily="{StaticResource FluentUIGlyphs}" Glyph="{StaticResource GlyphCompact}" />
                </labs:SettingsCard.HeaderIcon>

                <ToggleSwitch IsOn="{x:Bind ViewModel.AmbieMiniEnabled, Mode=TwoWay}">
                    <ToggleSwitch.OffContent>
                        <TextBlock x:Uid="OffTextBlock" />
                    </ToggleSwitch.OffContent>
                    <ToggleSwitch.OnContent>
                        <TextBlock x:Uid="OnTextBlock" />
                    </ToggleSwitch.OnContent>
                </ToggleSwitch>
            </labs:SettingsCard>

            <local:AboutControl />

        </StackPanel>
    </ScrollViewer>
</UserControl>
